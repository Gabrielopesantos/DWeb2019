extends layout
block content
  div.w3-container
    h1 Entidade #{e.sigla} 
      div.w3-bar-block.w3-teal
      .w3-container
        h5 Info
        table.w3-table-all.w3-small.w3-hoverable
            tr
                th 
                  u Estado
                th 
                  u Sigla
                th 
                  u SIOE
                th 
                  u Designacao
                th 
                  u Internacional
                tr
                    td= e.estado
                    td= e.sigla 
                    td= e.sioe
                    td= e.designacao
                    td= e.internacional
        br
      div.w3-bar-block.w3-teal
      .w3-container
        h5 Tipologias a que pertence
        table.w3-table-all.w3-small.w3-hoverable
            tr
                th 
                  u Sigla
                th 
                  u Designacao
                th 
                  u Id
            each t in e2
                tr
                    td= t.sigla
                    td= t.designacao
                    td
                      a(href='http://clav-api.dglab.gov.pt/api/tipologias/' + t.id + '?apikey=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpYXQiOjE1Nzg4NjAwNTQsImV4cCI6MTU4MTQ1MjA1NH0.HIlH4_Ao6504qaLhhbZ2_OtDzaZaG5FeYy-Yc2d9lwQ')  #{t.id} 

                    
        br
      div.w3-bar-block.w3-teal
      .w3-container
        h5 Processos - Dona
        table.w3-table-all.w3-small.w3-hoverable
            tr
                th 
                  u Codigo
                th 
                  u Titulo
            each d in e3
                tr
                    td
                      a(href='http://clav-api.dglab.gov.pt/api/travessia/' + d.codigo + '?apikey=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpYXQiOjE1Nzg4NjAwNTQsImV4cCI6MTU4MTQ1MjA1NH0.HIlH4_Ao6504qaLhhbZ2_OtDzaZaG5FeYy-Yc2d9lwQ')  #{d.codigo} 

                    td= d.titulo
        br
      div.w3-bar-block.w3-teal
      .w3-container
        h5 Processos - Participante
        table.w3-table-all.w3-small.w3-hoverable
            tr
                th 
                  u Tipo Par
                th 
                  u Codigo
                th 
                  u Titulo
            each p in e4
                tr
                    td= p.tipoPar
                    td
                      a(href='http://clav-api.dglab.gov.pt/api/travessia/' + p.codigo + '?apikey=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpYXQiOjE1Nzg4NjAwNTQsImV4cCI6MTU4MTQ1MjA1NH0.HIlH4_Ao6504qaLhhbZ2_OtDzaZaG5FeYy-Yc2d9lwQ')  #{p.codigo} 
                    td= p.titulo
      footer.w3-footer.w3-medium
        b By: Gabriel Santos
        a(href="https://github.com/gabrielopesantos/dweb2019") (GitHub)
        br
