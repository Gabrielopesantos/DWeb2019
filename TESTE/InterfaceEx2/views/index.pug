extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Lista de Entidades
            .w3-container
                table.w3-table-all.w3-small.w3-hoverable
                    tr
                        th Sigla
                        th Designação
                    each e in entidades
                        tr
                            td
                              a(href='/' + e.id)  #{e.sigla}    
                            td= e.designacao   
            footer.w3-container.w3-teal
                address  Criado por Gabriel Santos