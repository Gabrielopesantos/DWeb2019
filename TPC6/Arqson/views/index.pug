extends layout
block content
    .w3-container
        h1 Gestão Arquivo Sonoro Ernesto Veigar de Oliveira
        a(href='/adicionar')
            button.w3-button.w3-blue-grey.w3-section Nova música
        .w3-card-4
            header.w3-container.w3-teal
                h3 Lista de Músicas
            .w3-container
                table.w3-table-all.w3-small.w3-hoverable
                    tr
                        th Título
                        th Músico
                        th Local
                        th Operações
                    each m in lista
                        tr
                            td= m.tit      
                            td= m.musico
                            td= m.local
                            td
                                a(href='/mais/' + m.id).w3-button.w3-round-large.w3-blue-grey Mais
                            td
                                a(href='/editar/' + m.id).w3-button.w3-round-large.w3-blue-grey Editar    
                            td
                                button.w3-button.w3-round-large.w3-blue-grey(onclick="removerMusica('" + m.id + "')") Apagar    
            footer.w3-container.w3-teal
                address  Criado por Gabriel Santos