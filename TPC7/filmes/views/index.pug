extends layout
block content
    .w3-container
        h1 Arquivo de Filmes produzidos nos Estados Unidos 1900 - 2019
        .w3-card-4
            header.w3-container.w3-teal
                h3 Adicionar Filme
            form.w3-section.w3-container(action='/filmes/' method='POST')
                label.w3-teal
                    b Titulo
                input.w3-input.w3-border.w3-light-grey(type='text' name='title' required)
                label.w3-teal
                    b Ano
                input.w3-input.w3-border.w3-light-grey(type='text' name='year' required)
                label.w3-teal
                    b Elenco
                input.w3-input.w3-border.w3-light-grey(type='text' name='cast' required)
                label.w3-teal
                    b Género
                input.w3-input.w3-border.w3-light-grey(type='text' name='genres' required)
                input.w3-btn.w3-blue-grey.w3-margin-top(type='submit' value='Adicionar')
            footer.w3-container.w3-teal.w3-padding-8
        .w3-card-4
            header.w3-container.w3-teal
                h3 Lista de Filmes
            .w3-container
                table.w3-table-all.w3-small.w3-hoverable
                    tr
                        th Título
                        th Ano
                        th Elenco
                        th Géneros
                        th Operações
                    each f in lista
                        tr
                            td= f.title      
                            td= f.year
                            td= f.cast
                            td= f.genres
                            td
                                a(href='/filmes/mais/').w3-button.w3-round-large.w3-blue-grey Mais
                            td
                                a(href='/filmes/editar/' + f._id).w3-button.w3-round-large.w3-blue-grey Editar    
                            td
                                button.w3-button.w3-round-large.w3-blue-grey(onclick="removerFilme('" + f._id + "')") Remover    
            footer.w3-container.w3-teal
                address  Criado por Gabriel Santos