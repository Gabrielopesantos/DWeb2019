extends layout

block content
    .w3-container
        h1 Arquivo Sonoro de Ernesto Veiga de Oliveira
        .w3-card-4
            header.w3-container.w3-teal
                h3 Editar Música
            .w3-section.w3-container
                label.w3-teal
                    b Província
                input.w3-input.w3-border.w3-light-grey(id='title' type='text' value=f.title)
                label.w3-teal
                    b Local
                input.w3-input.w3-border.w3-light-grey(id='year' type='text' value=f.year)
                label.w3-teal
                    b Título
                input.w3-input.w3-border.w3-light-grey(id='cast' type='text' value=f.cast)
                label.w3-teal
                    b Músico
                input.w3-input.w3-border.w3-light-grey(id='genres' type='text' value=f.genres)
                button.w3-button.w3-blue-grey(onclick="editarFilme('" + f._id + "')") Editar
            footer.w3-container.w3-teal.w3-padding-16
                a(href='/filmes/').w3-button.w3-blue-grey Cancelar