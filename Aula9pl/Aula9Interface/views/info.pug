extends layout

block content
  div.w3-container
    h1 Entidade 
      div.w3-bar-block.w3-teal
      .w3-container
        table.w3-table-all.w3-small.w3-hoverable
            tr
                th 
                  u Estado
                th 
                  u Sigla
                th 
                  u SIOE
                th 
                  u Designacao
                th 
                  u Internacional
                tr
                    td= e.estado
                    td= e.sigla
                    td= e.sioe
                    td= e.designacao
                    td= e.internacional
        br
      div.w3-bar-block.w3-teal
      .w3-container
        table.w3-table-all.w3-small.w3-hoverable
            tr
                th 
                  u Sigla
                th 
                  u Designacao
                th 
                  u Id
            each t in e2
                tr
                    td= t.sigla
                    td= t.designacao
                    td= t.id
                    
        br
      div.w3-bar-block.w3-teal
      .w3-container
        table.w3-table-all.w3-small.w3-hoverable
            tr
                th 
                  u Codigo
                th 
                  u Titulo
            each d in e3
                tr
                    td= d.codigo
                    td= d.titulo
        br
      div.w3-bar-block.w3-teal
      .w3-container
        table.w3-table-all.w3-small.w3-hoverable
            tr
                th 
                  u Tipo Par
                th 
                  u Codigo
                th 
                  u Titulo
            each p in e4
                tr
                    td= p.tipoPar
                    td= p.codigo
                    td= p.titulo
