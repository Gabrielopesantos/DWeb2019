extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Lista de Entidades
            .w3-container
                table.w3-table-all.w3-small.w3-hoverable
                    tr
                        th Estado
                        th Sigla
                        th Designação
                        th Internacional
                        th Info
                    each e in entidades
                        tr
                            td= e.estado
                            td= e.sigla      
                            td= e.designacao
                            td= e.internacional
                            td
                                a(href='/' + e.id).w3-button.w3-round-large.w3-blue-grey Mais    
            footer.w3-container.w3-teal
                address  Criado por Gabriel Santos