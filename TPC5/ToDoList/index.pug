extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Lista de Tarefas
            .w3-container
                table.w3-table-all 
                    tr
                        th Tarefa
                        th Identificador
                    each al in lista
                        tr
                            td= al.tarefa
                            td= al.identificador
            footer.w3-container.w3-teal
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Registo de uma tarefa
            .w3-container
                form.w3-container(action='/tarefa' method='POST')
                    label.w3-teal
                        b Tarefa
                    input.w3-input.w3-border.w3-light-grey(type='text' name='tarefa')
                    label.w3-teal
                        b Identificador
                    input.w3-input.w3-border.w3-light-grey(type='text' name='identificador')
                    input.w3-btn.w3-blue-grey(type='submit' value='Enviar')
            footer.w3-container.w3-teal
                address Gerado por ToDo List App